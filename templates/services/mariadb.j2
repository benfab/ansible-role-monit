check process mariadb with match mysqld
    start program = "/bin/systemctl start mariadb" with timeout 30 seconds
    stop program  = "/bin/systemctl stop mariadb"
    if cpu usage > 80% for 5 cycles then alert
  	if failed host {{ ansible_default_ipv4.address }} port 3306 then restart
	if 5 restarts within 5 cycles then timeout